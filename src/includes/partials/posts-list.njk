<div id="posts--list">
    {%- for post in collections.post | reverse -%}
    <article>
        <a href="{{ post.url }}">
            <h2>
                {{ post.data.title }}
            </h2>
        </a>
        <time>
            {{ post.data.date }}
        </time>
        <p>
            {{ post.data.page.excerpt }}
        </p>
        {% for tag in post.data.tags %}
        {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
        <a href="{{ tagUrl | url }}">{{ tag }}</a>
        {% endfor %}
    </article>
    {%- endfor -%}
</div>
